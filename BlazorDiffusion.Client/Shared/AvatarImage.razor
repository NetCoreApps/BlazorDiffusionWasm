@inherits UiComponentBase

@if (User?.GetPublicUrl() != null)
{
    <img alt=@User.Handle class=@ClassNames("rounded-full overflow-hidden object-fit hover:opacity-70", @class)
         src=@(useSrc ?? User.GetPublicUrl())
         @onerror=@(() => useSrc = User.GetImageErrorUrl(useSrc))>
}
